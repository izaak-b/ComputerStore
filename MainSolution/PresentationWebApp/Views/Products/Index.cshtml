@model IEnumerable<ComputerStore.Application.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="row">

        @foreach (var p in Model)
        {
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="@p.ImageUrl" class="card-img-top image" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">&euro;@p.Price</p>
                        <a href="/Products/Details?id=@p.Id" class="btn btn-primary">View Specification</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/Products/Delete?id=@p.Id" class="btn btn-danger">Delete</a>
                        }

                    </div>
                </div>
            </div>
        }

    </div>
</div>